<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

    </style>
    
    <style name="BaseTextStyle" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="SubTitleStyle" parent="BaseTextStyle">
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    
    <style name="TextStyle" parent="BaseTextStyle">
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:textColor">@color/Gray</item>
    </style>
    
    <style name="TitleStyle" parent="BaseTextStyle">
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/EPVI</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="ButtonBaseStyle" parent="AppTheme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/buttonback</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>
    
    <style name="InactiveButton" parent="ButtonBaseStyle">
        <item name="android:background">@drawable/buttonbackinactive</item>
    </style>
    
    <style name="ButtonWithMargins" parent="ButtonBaseStyle">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    
    <style name="Rotate270" parent="@android:style/TextAppearance.Medium">
        <item name="android:rotation">270</item>
    </style>

</resources>
